@model StateHighCouncil.Web.Models.DashboardViewModel

@{
    ViewData["Title"] = "State High Council";
}

<div>
    <h1 class="display-4 text-center">Welcome to The State High Council</h1>
    <div class="row mt-5 position-fixed height:800px">
        <div class="card-body bg-info text-white" style="width: 18rem; height: 12rem;">
            <div class="text-center">
                <h5>Bill Count</h5>
            </div>
            <br />
            <div class="row"> 
                <div class="col-8 ps-4">
                    Republicans
                </div>
                <div class="col-4">
                    @Model.RepBillCount.Value
                </div>
            </div>
            <div class="row">
                <div class="col-8 ps-4">
                    Democrats
                </div>
                <div class="col-4">
                    @Model.DemBillCount.Value
                </div>
            </div>
            <div class="row font-weight-bold">
                <div class="col-8 ps-4">
                    <strong>Total</strong>
                </div>
                <div class="col-2 border-top">
                    <strong>@(Model.RepBillCount.Value + Model.DemBillCount.Value)</strong>
                </div>
                <div class="col-2"></div>
            </div>
        </div>
    </div>


    @*<p><a href="Home/UpdateStateData">Update State Data</a></p>*@

</div>
